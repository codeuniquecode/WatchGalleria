<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Approval | WatchGalleria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/2c8d038c04.js" crossorigin="anonymous"></script>
<!-- <link rel="stylesheet" href="vendorDashboard.css"> -->
<style>
     a{
            text-decoration: none;
        }
        .shopimage{
          height:2rem;
          width:2rem;
          border-radius: 50%;
        }
        .shopimage:hover{
          height:5rem;
          width:5rem;
        }
 
</style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <!-- Logo at the start -->
          <a class="navbar-brand" href="#">
            <img src="/images/logo.png" alt="Logo" width="60" height="60" class="d-inline-block align-text-top">
          </a>
          
          <!-- Toggler for mobile view -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
      
          <!-- Collapsible content -->
          <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Add other navigation items here if needed -->
            </ul>
      
            <!-- Search box and button at the end -->
            <form class="d-flex ms-auto" method="post" action="/admin/searchVendor">
              <input class="form-control me-2" name="shopname" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
     
    <main class="container mt-lg-5 mt-md-3 mt-sm-1">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/adminDashboard">Return to Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page">Approve Vendor</li>
        </ol>
      </nav>
       <!-- messages if any -->
       <% if(typeof message !== 'undefined' && message ){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Profile</th>
                <th scope="col">Shopname</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <%vendorData.forEach((vendor)=>{%>
              <tr>
                <td> <img src="https://watchgalleria.onrender.com/<%=vendor.photo %>" class="shopimage img-fluid" alt="user image"></td>
                <td><%=vendor.shopname %></td>
                <td><%=vendor.email %></td>
                <td><%=vendor.address %></td>
                <td class="fw-bold"><%=vendor.status %></td>
                <td>
                    <button type="button" class="btn btn-success"><a href="/admin/approved/<%-vendor.vendorId%>" type="button" class="btn-small text-light">
                        <i class="fa-solid fa-check"></i> Approve
                  </a></button>
                

                  <button type="button" class="btn btn-danger"><a href="/admin/rejected/<%-vendor.vendorId%>" type="button" class="btn-small text-light">
                    <i class="fa-solid fa-xmark"></i> Reject
                  </a></button>
                  
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
    <!-- <script src="dashboard.js"></script> -->
</body>
</html>