<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart | WatchGalleria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/2c8d038c04.js" crossorigin="anonymous"></script>
<link rel="icon" href="/images/logo.png" type="website icon">
<link rel="stylesheet" href="/css/index.css">
<style>
    .table img{
        width: 100px;
        max-height: 100px !important;
    }
    td{
        vertical-align: middle;
    }
    
    #quantity{
    
        border: none;
        width: 1.8rem;
        text-align: center !important;
    }
    .counter{
        flex-wrap: nowrap !important;
    }
    .counter button{
        background-color: white;
        border: none;
    }
    .counter button:hover{
        background-color: white;
        color: black;
    }
    .quant{
        min-width: 2rem !important;
        background-color: white !important;
    }


    .change{
        background-color: white;
        border: none;
    }
    @media screen and (max-width: 468px){
        .table img{
            width: 50px;
            max-height: 50px !important;
            min-height: 40px !important;
        }
        
    }
    
   
</style>
</head>
<body>
      <!-- Navbar -->
      <%- include ('navbar2.ejs') %>
    <main class="mt-lg-5 mt-md-3 mt-sm-1">
        <table class="table container text-center">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% if (cartItems.length === 0) { %>
                <tr>
                  <td colspan="6">Your cart is empty</td>
                </tr>
              <% } else { %>
                <% cartItems.forEach(item => { %>
                  <tr>
                    <td>
                      <img src="http://localhost:3000/<%= item.product.image %>" alt="<%= item.product.productName %>" class="img-fluid">
                    </td>
                    <td><%= item.product.productName %></td>
                    <td id="price"><%= item.product.price %></td>
                    <td class="counter text-center">
                      <div class="input-group counter text-center">
                        <button class="btn btn-outline-secondary" type="button" onclick="decreaseQuantity('<%= item.productId %>')">-</button>
                        <input type="text" class="form-control text-center quant" id="quantity-<%= item.productId %>" value="<%= item.quantity %>" min="1" max="5" readonly>
                        <button class="btn btn-outline-secondary" type="button" onclick="increaseQuantity('<%= item.productId %>')">+</button>
                      </div>
                    </td>
                    <td id="total"><%= item.product.price * item.quantity %></td>
                    <td> 
                      <button class="btn btn-danger" onclick="removeFromCart('<%= item.productId %>')">
                        <i class="fa-solid fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
            
          </table>
            <div class="container text-center">
                <button class="btn btn-primary" onclick="goBack()"> <i class="fa-solid fa-cart-shopping "></i> Continue Shopping</button>
                <button class="btn btn-primary"><i class="fa-regular fa-credit-card"></i> Checkout</button>
            </div>

    </main>
    <script>
        function goBack() {
          history.back();
        }
        let quantity = 1;
        const price = document.getElementById("price").textContent;
        const totalElement = document.getElementById("total");
  const quantityElement = document.getElementById("quantity");

  function updateTotal() {
    const total = price * quantity;
    totalElement.textContent = total;
  }

  function increaseQuantity(productId) {
    let quantityInput = document.getElementById('quantity-' + productId);
    let currentQuantity = parseInt(quantityInput.value);
    if (currentQuantity < 5) {
        quantityInput.value = currentQuantity + 1;
    }
    // Optionally: Update total and send the change to the server
}

function decreaseQuantity(productId) {
    let quantityInput = document.getElementById('quantity-' + productId);
    let currentQuantity = parseInt(quantityInput.value);
    if (currentQuantity > 1) {
        quantityInput.value = currentQuantity - 1;
    }
    // Optionally: Update total and send the change to the server
}

function removeFromCart(productId) {
    // Code to remove item from the cart, perhaps by sending an AJAX request to the server
}

      </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>
</html>