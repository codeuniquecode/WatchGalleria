    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management | WatchGalleria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/2c8d038c04.js" crossorigin="anonymous"></script>
<!-- <link rel="stylesheet" href="vendorDashboard.css"> -->
<style>
     a{
            text-decoration: none;
        }
        .userimage{
          height:2rem;
          width:2rem;
          border-radius: 50%;
        }
        .userimage:hover{
          height:5rem;
          width:5rem;
        }
 
</style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <!-- Logo at the start -->
          <a class="navbar-brand" href="#">
            <img src="/images/logo.png" alt="Logo" width="60" height="60" class="d-inline-block align-text-top">
          </a>
          
          <!-- Toggler for mobile view -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
      
          <!-- Collapsible content -->
          <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Add other navigation items here if needed -->
            </ul>
      
            <!-- Search box and button at the end -->
            <form class="d-flex ms-auto" method="post" action="/admin/productSearch">
              <input class="form-control me-2" type="search" placeholder="Search Product" name="productname" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    <main class="container mt-lg-5 mt-md-3 mt-sm-1">
      <!-- messages if any -->
       <% if(typeof message !== 'undefined' && message ){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/adminDashboard">Return to Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Product Management</li>
          </ol>
        </nav>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Picture</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Vendor Id</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
             <tr>
              <% productData.forEach(function(product){ %>
                <td> <img src="https://watchgalleria.onrender.com/<%=product.productpicture %>" class="userimage img-fluid" alt="product image"></td>
                <td><%= product.productname %></td>
                <td><%= product.price %></td>
                <td><%= product.quantity %></td>
                <td><%= product.vendorId %></td>
                <td><a href="/admin/editProduct/<%= product.productId %>" class="btn btn-primary"> <i class="fa-solid fa-pencil"></i> Edit</a> <a href="/admin/deleteProduct/<%= product.productId %>" class="btn btn-danger" id="liveToastBtn"> <i class="fa-solid fa-trash-can"></i> Delete</a> </td>

             </tr>
              <% }) %>
            </tbody>
          </table>
         
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
    <!-- <script src="dashboard.js"></script> -->
</body>
</html>