<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order | WatchGalleria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/2c8d038c04.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/index.css">
    <style>
        .table img{
            width: 100px;
            max-height: 100px !important;
        }
        td{
            vertical-align: middle;
        }

        #quantity{
            border: none;
            width: 1.8rem;
            text-align: center !important;
        }
        .counter{
            flex-wrap: nowrap !important;
        }
        .counter button{
            background-color: white;
            border: none;
        }
        .counter button:hover{
            background-color: white;
            color: black;
        }
        .quant{
            min-width: 2rem !important;
            background-color: white !important;
        }

        .change{
            background-color: white;
            border: none;
        }
        @media screen and (max-width: 468px){
            .table img{
                width: 50px;
                max-height: 50px !important;
                min-height: 40px !important;
            }
        }
    </style>
</head>
<body>
    
    <!-- Navbar -->
    <%- include('navbar2.ejs') %>
    <main class="mt-lg-5 mt-md-3 mt-sm-1">
        <table class="table container text-center">
            <thead>
                <tr>
                    <th scope="col">OrderID</th>
                    <th scope="col">Picture</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                <% if (userOrders.length === 0) { %>
                    <tr>
                        <td colspan="5">You don't have any orders</td>
                    </tr>
                <% } else { %>
                    <% userOrders.forEach(order => { %>
                        <!-- Loop through each order and then order items inside -->
                        <% order.orderItems.forEach(item => {
                            const itemTotal = item.product.price * item.quantity;
                        %>
                            <tr>
                                <td>
                                    <%= order.orderId %>
                                </td>
                                <td>
                                    <img src="http://localhost:3000/<%= item.product.productpicture %>" 
                                        alt="<%= item.product.productname %>" class="img-fluid" style="max-width: 100px;">
                                </td>
                                <td><%= item.product.productname %></td>
                                <td id="price-<%= item.productId %>">Rs. <%= item.product.price %></td>
                                <td class="counter text-center">
                                    <%= item.quantity %>
                                </td>
                                <td id="total-<%= item.productId %>">Rs. <%= itemTotal %></td>
                                <td>
                                    <% if (order.status === 'Delivered') { %>
                                        <span class="fw-bold"><%= order.status %></span>
                                    <% } else { %>
                                        <span class="fw-bold"><%= order.status %></span>
                                    <% } %>
                            </tr>
                        <% }); %>
    
                        <!-- Only display the total amount once per order, after all items -->
                        
                    <% }); %>
                <% } %>
                <p class="fw-bold text-center">
                    <td colspan="4" class="text-end fw-bold">Total Amount:</td>
                    <td class="fw-bold">Rs. <%= sumTotalAmount %></td>
                </p>
            </tbody>
        </table>
    
        <!-- <div class="container text-center">
            <button class="btn btn-primary"><i class="fa-regular fa-credit-card"></i> Checkout</button>
        </div> -->
    </main>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>
</html>
