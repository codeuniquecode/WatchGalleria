<body>
    <!-- Navbar -->
        <%- include ('navbar2.ejs') %>
    
    <!-- signup form -->
    <main>
        <div class="container text-center mt-3">
            <h2>Welcome to <span class="w">Watch</span><span class="g">Galleria</span></h2>
            <h4>Please Signup</h4>
            <form enctype="multipart/form-data" action="/register" id="userForm" method="post">
                <div class="row">
                    <div class="mb-3 text-center col-sm-12 col-md-6">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" name="fullname" class="form-control w-75 text-center mx-auto" id="fullname"
                            aria-describedby="nameHelp">
                            <div id="nameHelp" class="form-text">Please enter fullname.</div>
                        
                    </div>
                    <div class="mb-3 text-center col-md-6 col-sm-12">
                        <label for="phone" class="form-label">Phone No.</label>
                        <input type="text" name="phonenumber" class="form-control w-75 text-center mx-auto" id="phone" aria-describedby="phoneHelp">
                        <div id="phoneHelp" class="form-text">Please enter PhoneNo.</div>
                    </div>
                </div>
                <!-- row1sakyo -->
                <div class="row">
                    <div class="mb-3 text-center col-sm-12 col-md-6">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" name="email" class="form-control w-75 text-center mx-auto" id="email"
                            aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3 text-center col-md-6 col-sm-12">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control w-75 text-center mx-auto" id="password">
                        <div id="passwordHelpBox" class="form-text"> Your password must be minimum 8 characters long, contain
                            letters and numbers only.</div>
                    </div>
                </div>
                <!-- row2sakyo -->
                <div class="row">
                    <div class="mb-3 text-center col-md-6 col-sm-12">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" name="address" class="form-control w-75 text-center mx-auto" id="address">
                        <div id="addresserr" class="form-text"> Please Enter Full address, add landmark at last if possible for ease in delivery.</div>
                    </div>
                    <div class="mb-3 text-center col-md-6 col-sm-12 mx-auto">
                        <label for="photo" class="form-label">Upload your profile picture</label> <br>
                        <div class="pic text-center">
                          <input type="file" name="image" class="d-block mx-auto" accept=".jpg, .jpeg, .png" required>
                        </div>
                      </div>
                      
                    </div>
                </div>
                <div class="last text-center mx-auto">
                <div class="mb-3 text-center">
                    Already have an account? <a href="/login">Login Here</a> <br>

                </div>
                <button type="submit" class="btn btn-primary w-25" id="submit">Submit</button>
                <button type="reset" class="btn btn-primary w-25">Reset</button>
                </div>
            </form>
        </div>
    </main>
    <script src="/scripts/validate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>