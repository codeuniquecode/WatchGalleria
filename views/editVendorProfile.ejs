<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/2c8d038c04.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/vendorDashboard.css">
    <style>
        .w {
            color: var(--primary-color);

        }

        .g {
            color: var(--secondary-color);
        }

        .w,
        .g {
            font-weight: bold;
        }
        .error {
             color: red;
            font-weight: bold;
            }
            a {
      text-decoration: none;
      color: var(--primary-color) !important;
    }

        @media (min-width: 768px) {
            input {
                width: 75%;
            } 
        }
        @media (max-width: 468px) {
            .pic{
                min-width: 100% !important;
                margin-left: 1.5rem !important;
            }
        }
        
        .main-body {
            padding-left: 190px;
        }
        @media screen and (max-width:991px) {
            .main-body {
                padding-left: 0px;
            }
        }
        .active {
            font-weight: bolder;
            color: #DCAB27;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
   
<!-- main -->
    <main>
        <%- include('sidebar') %>
        <div class="container text-center mt-5 main-body">
            <h4>Edit Profile</h4>
            <!-- successful message -->
            <p class="fs-5">
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-success d-flex align-items-center fade show" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                        <div>
                         <%- message %>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                      </div>
                <% } %>
            </p>
            <form id="userForm" method="post" action="/vendor/editVendor">
                <div class="row justify-content-center mt-lg-5 mt-md-3 mt-sm-2">
                    <div class="mb-3 w-75">
                        <label for="phone" class="form-label">Phone No.</label>
                        <input type="text" class="form-control w-75 mx-auto text-center" id="phone" name="phone" required>
                    </div>
                </div>
            
                <div class="row justify-content-center">
                    <div class="mb-3 w-75">
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" class="form-control w-75 mx-auto text-center" id="exampleInputEmail1" name="email" required>
                    </div>
                </div>
            
                <div class="row justify-content-center">
                    <div class="mb-3 w-75">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control w-75 mx-auto text-center" id="address" name="address" required>
                    </div>
                </div>
            
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" id="submit">Update Profile</button>
                </div>
            </form>
            
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
        <script src="/scripts/dashboard.js"></script>
</body>

</html>