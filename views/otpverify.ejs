<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password | WatchGalleria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="icon" href="/images/logo.png" type="website icon">
        <style>
            .form-control{
                width: 30% !important;
            }
            @media screen and (max-width: 768px){
                .form-control{
                    width: 70% !important;
                }
                
            }
            #error{
                color: red;
                font-weight: bolder;
            }
        </style>
</head>

<body>
    <div class="container text-center mt-5">
        <div class="fs-1">OTP Verification</div>
        <p class="lead fs-3">Enter otp sent to email address</p>
        <form action="/otpVerify" method="post" id="form">
            <div class="form-group mb-3">
                <input type="text" name="otp" id="otp" class="form-control text-center mx-auto" required>
             
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
<script>
    const otp = document.getElementById('otp');
    const form = document.getElementById('form');
    const error = document.getElementById('error');
    form.addEventListener('submit', (e) => {
        if(otp.value.length !== 4){
            otp.setCustomValidity('Invalid OTP !!!');
            e.preventDefault();
        }
        else{
            otp.setCustomValidity('');
            form.submit();
        }
    });
</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>